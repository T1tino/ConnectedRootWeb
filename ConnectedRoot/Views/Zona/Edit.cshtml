@model ConnectedRoot.Models.Zona

@{
    ViewData["Title"] = "Editar Zona";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
        <i class="fas fa-edit"></i> Editar Zona de Cultivo
    </h2>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-action="Index">
                    <i class="fas fa-map-marked-alt"></i> Zonas
                </a>
            </li>
            <li class="breadcrumb-item active">Editar</li>
        </ol>
    </nav>
</div>

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle"></i>
        @ViewBag.Error
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input asp-for="Id" type="hidden" />
            
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-map-marked-alt"></i> Informaci√≥n de la Zona
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group mb-3">
                                <label asp-for="HuertoId" class="form-label">Huerto <span class="text-danger">*</span></label>
                                <select asp-for="HuertoId" class="form-select" required>
                                    <option value="">-- Selecciona un huerto --</option>
                                    @if (ViewBag.Huertos != null)
                                    {
                                        @foreach (var huerto in (List<ConnectedRoot.Models.Huerto>)ViewBag.Huertos)
                                        {
                                            <option value="@huerto.Id">@huerto.NombreHuerto</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="HuertoId" class="text-danger"></span>
                                <div class="form-text">
                                    <i class="fas fa-seedling"></i> 
                                    Solo se muestran huertos activos.
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="NombreZona" class="form-label">Nombre de la Zona <span class="text-danger">*</span></label>
                                <input asp-for="NombreZona" class="form-control" placeholder="Ej: Zona A - Hortalizas" required />
                                <span asp-validation-for="NombreZona" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="TipoZona" class="form-label">Tipo de Zona <span class="text-danger">*</span></label>
                                <select asp-for="TipoZona" class="form-select" required>
                                    <option value="">-- Selecciona el tipo --</option>
                                    <option value="Hortalizas">ü•¨ Hortalizas</option>
                                    <option value="Frutales">üçé Frutales</option>
                                    <option value="Arom√°ticas">üåø Arom√°ticas</option>
                                    <option value="Semillero">üå± Semillero</option>
                                    <option value="Compostaje">‚ôªÔ∏è Compostaje</option>
                                    <option value="Invernadero">üè† Invernadero</option>
                                    <option value="Otro">üì¶ Otro</option>
                                </select>
                                <span asp-validation-for="TipoZona" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group mb-3">
                                <label asp-for="Descripcion" class="form-label">Descripci√≥n</label>
                                <textarea asp-for="Descripcion" class="form-control" rows="3" 
                                         placeholder="Describe las caracter√≠sticas de esta zona..."></textarea>
                                <span asp-validation-for="Descripcion" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Estado" class="form-label">Estado <span class="text-danger">*</span></label>
                                <select asp-for="Estado" class="form-select" required>
                                    <option value="activa">üü¢ Activa</option>
                                    <option value="inactiva">üî¥ Inactiva</option>
                                </select>
                                <span asp-validation-for="Estado" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Coordenadas GPS -->
            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-map-pin"></i> Coordenadas GPS (Opcional)
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Coordenadas.Latitud" class="form-label">Latitud</label>
                                <input asp-for="Coordenadas.Latitud" type="number" step="0.000001" class="form-control" 
                                       placeholder="Ej: 19.432608" />
                                <span asp-validation-for="Coordenadas.Latitud" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Coordenadas.Longitud" class="form-label">Longitud</label>
                                <input asp-for="Coordenadas.Longitud" type="number" step="0.000001" class="form-control" 
                                       placeholder="Ej: -99.133209" />
                                <span asp-validation-for="Coordenadas.Longitud" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <div>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver a la lista
                    </a>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                        <i class="fas fa-eye"></i> Ver detalles
                    </a>
                </div>
                <div>
                    <button type="button" class="btn btn-outline-danger" onclick="resetForm()">
                        <i class="fas fa-undo"></i> Restablecer
                    </button>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Guardar Cambios
                    </button>
                </div>
            </div>
        </form>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-info-circle"></i> Informaci√≥n de Edici√≥n
                </h6>
            </div>
            <div class="card-body">
                <small class="text-muted">
                    <strong>ID de la Zona:</strong><br>
                    <code>@Model.Id</code><br><br>
                    
                    <strong>Campos editables:</strong><br>
                    ‚Ä¢ Huerto asignado<br>
                    ‚Ä¢ Nombre de la zona<br>
                    ‚Ä¢ Tipo de cultivo<br>
                    ‚Ä¢ Descripci√≥n<br>
                    ‚Ä¢ Coordenadas GPS<br>
                    ‚Ä¢ Estado (activa/inactiva)<br><br>
                    
                    <strong>Validaciones:</strong><br>
                    ‚Ä¢ El nombre debe ser √∫nico por huerto<br>
                    ‚Ä¢ Todos los campos marcados con * son obligatorios
                </small>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-cog"></i> Estado Actual
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-2">
                    <strong>Estado:</strong>
                    <span class="badge @(Model.Estado == "activa" ? "bg-success" : "bg-danger") ms-1">
                        @(Model.Estado == "activa" ? "Activa" : "Inactiva")
                    </span>
                </div>
                <div class="mb-2">
                    <strong>Tipo actual:</strong>
                    <span class="badge bg-info ms-1">@Model.TipoZona</span>
                </div>
                @if (Model.Coordenadas != null && Model.Coordenadas.Latitud != 0 && Model.Coordenadas.Longitud != 0)
                {
                    <div class="mb-2">
                        <strong>Coordenadas:</strong><br>
                        <small class="text-muted">
                            Lat: @Model.Coordenadas.Latitud.ToString("F6")<br>
                            Lng: @Model.Coordenadas.Longitud.ToString("F6")
                        </small>
                        <a href="https://www.google.com/maps/search/@Model.Coordenadas.Latitud,@Model.Coordenadas.Longitud" 
                           target="_blank" 
                           class="btn btn-sm btn-outline-primary ms-1"
                           title="Ver en Google Maps">
                            <i class="fas fa-external-link-alt"></i>
                        </a>
                    </div>
                }
                else
                {
                    <div class="mb-2">
                        <strong>Coordenadas:</strong><br>
                        <small class="text-muted">No configuradas</small>
                    </div>
                }
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-lightbulb"></i> Consejos
                </h6>
            </div>
            <div class="card-body">
                <small class="text-muted">
                    <strong>üí° Sugerencias:</strong><br>
                    ‚Ä¢ Usa nombres descriptivos para las zonas<br>
                    ‚Ä¢ Las coordenadas ayudan con el mapeo<br>
                    ‚Ä¢ Cambia el estado sin eliminar datos<br>
                    ‚Ä¢ El tipo de zona facilita el filtrado
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Validaci√≥n en tiempo real del nombre
        document.getElementById('NombreZona').addEventListener('blur', function() {
            const nombre = this.value.trim();
            
            if (nombre.length < 3) {
                this.classList.add('is-invalid');
            } else {
                this.classList.remove('is-invalid');
                this.classList.add('is-valid');
            }
        });

        // Validaci√≥n de coordenadas
        const latitudInput = document.getElementById('Coordenadas_Latitud');
        const longitudInput = document.getElementById('Coordenadas_Longitud');

        if (latitudInput) {
            latitudInput.addEventListener('input', function() {
                const valor = parseFloat(this.value);
                if (valor >= -90 && valor <= 90) {
                    this.classList.remove('is-invalid');
                    this.classList.add('is-valid');
                } else if (this.value) {
                    this.classList.remove('is-valid');
                    this.classList.add('is-invalid');
                }
            });
        }

        if (longitudInput) {
            longitudInput.addEventListener('input', function() {
                const valor = parseFloat(this.value);
                if (valor >= -180 && valor <= 180) {
                    this.classList.remove('is-invalid');
                    this.classList.add('is-valid');
                } else if (this.value) {
                    this.classList.remove('is-valid');
                    this.classList.add('is-invalid');
                }
            });
        }

        // Reset form function
        function resetForm() {
            if (confirm('¬øEst√°s seguro de restablecer todos los cambios?')) {
                document.querySelector('form').reset();
                // Remove validation classes
                document.querySelectorAll('.is-valid, .is-invalid').forEach(function(element) {
                    element.classList.remove('is-valid', 'is-invalid');
                });
            }
        }

        // Auto-dismiss alerts
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert-dismissible');
            alerts.forEach(function(alert) {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);

        // Form change detection
        let formChanged = false;
        document.querySelector('form').addEventListener('input', function() {
            formChanged = true;
        });

        // Warn before leaving if form has changes
        window.addEventListener('beforeunload', function(e) {
            if (formChanged) {
                e.preventDefault();
                e.returnValue = '¬øEst√°s seguro de salir? Los cambios no guardados se perder√°n.';
                return e.returnValue;
            }
        });

        // Reset form changed flag on submit
        document.querySelector('form').addEventListener('submit', function() {
            formChanged = false;
        });
    </script>
}