@model ConnectedRoot.Models.Usuario

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
        <i class="fas fa-user-circle"></i> Detalles del Usuario
    </h2>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-action="Index">
                    <i class="fas fa-users"></i> Usuarios
                </a>
            </li>
            <li class="breadcrumb-item active">Detalles</li>
        </ol>
    </nav>
</div>

<div class="row">
    <div class="col-md-8">
        <!-- Información Principal -->
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <div class="d-flex align-items-center">
                    
                    <div>
                        <h5 class="card-title mb-0">
                            @Model.Nombre @Model.PrimerApellido @Model.SegundoApellido
                        </h5>
                        <small class="text-white-50">@Model.Correo</small>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="text-muted mb-3">
                            <i class="fas fa-user"></i> Información Personal
                        </h6>
                        
                        <dl class="row">
                            <dt class="col-sm-4">ID:</dt>
                            <dd class="col-sm-8">
                                <code>@Model.Id</code>
                                <button class="btn btn-sm btn-outline-secondary ms-2" onclick="copyToClipboard('@Model.Id')" title="Copiar ID">
                                    <i class="fas fa-copy"></i>
                                </button>
                            </dd>
                            
                            <dt class="col-sm-4">Nombre(s):</dt>
                            <dd class="col-sm-8">@Model.Nombre</dd>
                            
                            <dt class="col-sm-4">Primer Apellido:</dt>
                            <dd class="col-sm-8">@Model.PrimerApellido</dd>
                            
                            <dt class="col-sm-4">Segundo Apellido:</dt>
                            <dd class="col-sm-8">
                                @if (string.IsNullOrEmpty(Model.SegundoApellido))
                                {
                                    <span class="text-muted">No especificado</span>
                                }
                                else
                                {
                                    @Model.SegundoApellido
                                }
                            </dd>
                            
                            <dt class="col-sm-4">Correo:</dt>
                            <dd class="col-sm-8">
                                <a href="mailto:@Model.Correo" class="text-decoration-none">
                                    <i class="fas fa-envelope"></i> @Model.Correo
                                </a>
                            </dd>
                        </dl>
                    </div>
                    
                    <div class="col-md-6">
                        <h6 class="text-muted mb-3">
                            <i class="fas fa-cog"></i> Configuración de Acceso
                        </h6>
                        
                        <dl class="row">
                            <dt class="col-sm-4">Rol:</dt>
                            <dd class="col-sm-8">
                                @switch (Model.Rol.ToLower())
                                {
                                    case "administrador":
                                        <span class="badge bg-danger fs-6">
                                            <i class="fas fa-crown"></i> Administrador
                                        </span>
                                        break;
                                    case "agricultor":
                                        <span class="badge bg-success fs-6">
                                            <i class="fas fa-seedling"></i> Agricultor
                                        </span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary fs-6">
                                            <i class="fas fa-question"></i> @Model.Rol
                                        </span>
                                        break;
                                }
                            </dd>
                            
                            <dt class="col-sm-4">Estado:</dt>
                            <dd class="col-sm-8">
                                @if (Model.Activo)
                                {
                                    <span class="badge bg-success fs-6">
                                        <i class="fas fa-check-circle"></i> Usuario Activo
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger fs-6">
                                        <i class="fas fa-times-circle"></i> Usuario Inactivo
                                    </span>
                                }
                            </dd>
                            
                            <dt class="col-sm-4">Contraseña:</dt>
                            <dd class="col-sm-8">
                                <span class="text-muted">
                                    <i class="fas fa-lock"></i> Protegida
                                </span>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <!-- Huertos Asignados -->
        <div class="card shadow-sm mt-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-leaf"></i> Huertos Asignados
                </h5>
            </div>
            <div class="card-body">
                @if (Model.HuertosAsignadosIds == null || !Model.HuertosAsignadosIds.Any())
                {
                    <div class="text-center py-4">
                        <i class="fas fa-seedling text-muted fa-3x mb-3"></i>
                        <p class="text-muted mb-0">Este usuario no tiene huertos asignados.</p>
                    </div>
                }
                else
                {
                    <div class="row">
                        @foreach (var huertoId in Model.HuertosAsignadosIds)
                        {
                            <div class="col-md-6 mb-3">
                                <div class="card border-success">
                                    <div class="card-body">
                                        <h6 class="card-title">
                                            <i class="fas fa-seedling text-success"></i>
                                            Huerto
                                        </h6>
                                        <p class="card-text">
                                            <small class="text-muted">ID: <code>@huertoId</code></small>
                                        </p>
                                        <a href="#" class="btn btn-sm btn-outline-success">
                                            <i class="fas fa-eye"></i> Ver detalles
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    
                    <div class="mt-3">
                        <small class="text-muted">
                            <i class="fas fa-info-circle"></i>
                            Total de huertos asignados: <strong>@Model.HuertosAsignadosIds.Count</strong>
                        </small>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Panel Lateral -->
    <div class="col-md-4">
        <!-- Acciones Rápidas -->
        <div class="card shadow-sm">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-bolt"></i> Acciones Rápidas
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Editar Usuario
                    </a>
                    
                    <form asp-action="ToggleStatus" asp-route-id="@Model.Id" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" 
                                class="btn @(Model.Activo ? "btn-outline-danger" : "btn-outline-success") w-100"
                                onclick="return confirm('@(Model.Activo ? "¿Desactivar este usuario?" : "¿Activar este usuario?")')">
                            <i class="fas @(Model.Activo ? "fa-ban" : "fa-check")"></i> 
                            @(Model.Activo ? "Desactivar" : "Activar")
                        </button>
                    </form>
                    
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver a la Lista
                    </a>
                </div>
            </div>
        </div>

        <!-- Resumen -->
        <div class="card shadow-sm mt-3">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-chart-pie"></i> Resumen
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <span>Estado:</span>
                        <span class="@(Model.Activo ? "text-success" : "text-danger")">
                            @(Model.Activo ? "Activo" : "Inactivo")
                        </span>
                    </div>
                </div>
                
                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <span>Rol:</span>
                        <span class="text-info">@Model.Rol</span>
                    </div>
                </div>
                
                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <span>Huertos:</span>
                        <span class="text-success">@(Model.HuertosAsignadosIds?.Count ?? 0)</span>
                    </div>
                </div>
                
                <hr>
                
                <div class="text-center">
                    <small class="text-muted">
                        <i class="fas fa-database"></i>
                        ID: @Model.Id?.Substring(0, 8)...
                    </small>
                </div>
            </div>
        </div>

        <!-- Información Adicional -->
        <div class="card shadow-sm mt-3">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-info-circle"></i> Información
                </h6>
            </div>
            <div class="card-body">
                <small class="text-muted">
                    <strong>Permisos por rol:</strong><br><br>
                    
                    <strong>👨‍💼 Administrador:</strong><br>
                    • Acceso completo al sistema<br>
                    • Gestión de usuarios<br>
                    • Configuración global<br>
                    • Visualización de datos<br>
                    • Reportes de seguimiento<br><br>
                    
                    <strong>🌱 Agricultor:</strong><br>
                    • Gestión de huertos asignados<br>
                    • Registro de actividades<br>
                    • Reportes básicos<br><br>
                </small>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/usuario.css" />
}

@section Scripts {
    <script src="~/js/usuario.js"></script>
}