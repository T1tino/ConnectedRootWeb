@if (User.Identity?.IsAuthenticated == true)
{
    <div class="user-info-card bg-light p-3 rounded mb-3">
        <div class="d-flex align-items-center">
            <div class="user-avatar bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3" 
                 style="width: 50px; height: 50px; font-size: 1.2rem;">
                <i class="fas fa-user"></i>
            </div>
            
            <div>
                <h6 class="mb-1">@User.FindFirst("NombreCompleto")?.Value</h6>
                <small class="text-muted">
                    <i class="fas fa-envelope me-1"></i>@User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value
                </small><br>
                <small class="text-success">
                    <i class="fas fa-shield-alt me-1"></i>@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value
                </small>
            </div>
        </div>
    </div>
}